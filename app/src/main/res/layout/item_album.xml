<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <data>
        <variable
            name="item"
            type="com.t3h.mp3music.models.Album" />
        <variable
            name="listener"
            type="com.t3h.mp3music.ui.screen.MediaListener&lt;com.t3h.mp3music.models.Album>" />
    </data>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:onClick="@{v -> listener.onItemMediaClicked(item)}"
        android:padding="1dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/im_thumb"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            thumb="@{item.id}"/>
        <TextView
            android:text="@{item.name}"
            android:padding="16dp"
            android:lines="2"
            android:gravity="center"
            android:background="#eee"
            app:layout_constraintTop_toBottomOf="@id/im_thumb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>